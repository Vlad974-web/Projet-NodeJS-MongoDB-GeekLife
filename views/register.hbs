<section class="register">
    <div class="wrapper">
        <div class="title-register">S'inscrire</div>
        <div class="form-register">
            <form action="/user/register" method="POST" enctype="multipart/form-data">

                <div class="input_field">
                    <label>Prénom</label>
                    <input type="text" class="input-register" placeholder="Votre prénom" name="name" required value={{data.name}}>
                </div>

                <div class="input_field">
                    <label>Nom</label>
                    <input type="text" class="input-register" placeholder="Votre Nom de Famaille" name="firstName" required value={{data.firstName}}>
                </div>

                <div class="input_field">
                    <label>Mot de passe</label>
                    <input type="password" class="input-register" placeholder="Mot de passe" name="password" required>
                </div>

                <div class="input_field">
                    <label>Confirmez le mot de passe</label>
                    <input type="password" class="input-register" placeholder="Mot de passe" name="confirmPassword" required>
                </div>

                <div class="input_field">
                    <label>Le sexe</label>
                    <div class="custom_select">
                        <select required>
                            <option value="">Sélectionner</option>
                            <option value="male">Homme</option>
                            <option value="female">Femme</option>
                        </select>
                    </div>
                </div>

                <div class="input_field">
                    <label>E-mail Adresse</label>
                    <input type="text" class="input-register" placeholder="Votre e-mail" name="email" required value={{data.email}}>
                </div>

                <div class="input_field">
                    <label>Numéro de téléphone</label>
                    <input type="text" class="input-register" placeholder="Votre numéro" name="phone" value={{data.phone}}>
                </div>

                <div class="input_field">
                    <label>Adresse</label>
                    <textarea name="adress" rows="2" class="texterea-register" required value={{data.adress}}></textarea>
                </div>

                <div class="input_field">
                    <label>Code Postal</label>
                    <input type="text" class="input-register" placeholder="Votre Code Postal" name="postal" required value={{data.postal}}>
                </div>

                <div class="input_field terms">
                    <label class="check-register">
                        <input type="checkbox">
                        <span class="checkmat"></span>
                    </label>
                    <p>Accepté des termes et conditions</p>
                </div>

                <div class="inputfield">
                    <input type="submit" value="Enregistrer" class="btn-register">
                </div>
            </form>
        </div>
    </div>
</section>